import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt(); 
        int[] arr = new int[n];
        int sum = 0;
        for(int i = 0; i < n; i++) {
            arr[i] = sc.nextInt();
            sum += arr[i]; 
        }
        if(sum % 2 == 0 && sum % 3 == 0 && sum % 5 == 0) {
            System.out.println("1");
        } else {
            System.out.println("0"); 
        }
    }
}
